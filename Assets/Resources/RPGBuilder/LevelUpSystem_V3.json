{
  "version": "V3_Egyptian_ARPG",
  "description": "Roguelike level-up system with archetype-based random upgrade choices",
  "levelUpMechanics": {
    "experienceRequired": {
      "baseXP": 100,
      "scalingFactor": 1.2,
      "levelCap": 50,
      "formula": "baseXP * pow(scalingFactor, level - 1)"
    },
    "choiceSystem": {
      "choicesPerLevel": 3,
      "selectionTimeLimit": 15,
      "randomization": {
        "archetypeWeight": 0.6,
        "rarityWeight": 0.3,
        "synergyWeight": 0.1
      },
      "uiElements": {
        "choiceCards": {
          "layout": "horizontal",
          "animation": "card_flip",
          "highlighting": "archetype_colors"
        },
        "statPreview": {
          "showCurrentValue": true,
          "showNewValue": true,
          "showPercentageChange": true
        }
      }
    },
    "archetypeIntegration": {
      "pathLockIn": {
        "levelThreshold": 5,
        "commitmentBonus": 1.25,
        "pathRestriction": "primary_only"
      },
      "synergyBonuses": {
        "dualPath": {
          "enabled": false,
          "bonusMultiplier": 1.1
        },
        "triPath": {
          "enabled": false,
          "bonusMultiplier": 1.15
        }
      }
    }
  },
  "upgradeCategories": [
    {
      "id": "combat_upgrades",
      "name": "Combat Mastery",
      "description": "Enhance your direct combat effectiveness",
      "icon": "sword_crossed",
      "color": "#DC143C",
      "weight": 30
    },
    {
      "id": "magical_upgrades",
      "name": "Divine Magic",
      "description": "Amplify your spellcasting and magical abilities",
      "icon": "magic_orb",
      "color": "#4169E1",
      "weight": 25
    },
    {
      "id": "survival_upgrades",
      "name": "Immortal Endurance",
      "description": "Strengthen your defenses and sustainability",
      "icon": "shield_ankh",
      "color": "#228B22",
      "weight": 20
    },
    {
      "id": "utility_upgrades",
      "name": "Godly Utility",
      "description": "Enhance your quality of life and progression",
      "icon": "divine_scroll",
      "color": "#FFD700",
      "weight": 15
    },
    {
      "id": "archetype_specific",
      "name": "Path Specialization",
      "description": "Deepen your connection to your chosen divine path",
      "icon": "godly_symbol",
      "color": "#9370DB",
      "weight": 10
    }
  ],
